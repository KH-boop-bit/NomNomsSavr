{
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        { 
            "src": "src/api/**/*.js", 
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        { 
            "sources": "/(.*)", "destination": "/index.html"
        }
    ]
}